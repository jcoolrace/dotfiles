# vim:filetype=msmtp

defaults
protocol smtp
auth on
tls on
tls_trust_file /etc/ssl/certs/ca-certificates.crt
#tls_nocertcheck
tls_starttls off

account <account1>
host smtp.gmail.com
#port 587
port 465
from <email1>@gmail.com
user <email1>@gmail.com
passwordeval "gpg --quiet --for-your-eyes-only --no-tty --decrypt ~/.msmtp-user1.gpg"
tls_starttls off
