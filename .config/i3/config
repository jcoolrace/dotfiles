# i3 config file (v4)
# Location: ~/.config/i3/config
# Please see http://i3wm.org/docs/userguide.html for a complete reference!

# Mod1=<Alt> Mod4=<Super>
set $mod Mod4

# Don't hide borders
hide_edge_borders none

# Font
font pango:SFNS Display 10

# Use Mouse+$mod to drag windows
floating_modifier $mod

set $terminal urxvt
set $lock i3lock -B 10 --ringcolor=ccccccff --insidecolor=ffffff00 --keyhlcolor=3333ccff --bshlcolor=cc3333ff --ringvercolor=ccccccff --insidevercolor=00000000 --textcolor=ffffffff --linecolor=00000000 --separatorcolor=00000000 --timecolor=ffffffff

# The basics
bindsym $mod+Return exec $terminal
bindsym $mod+Shift+q kill
bindsym $mod+d exec --no-startup-id rofi -show run -font 'SFNS Display 13' -hide-scrollbar -matching fuzzy
# bindsym $mod+q exec i3lock -i ~/Documents/Lock\ Screen.png
bindsym $mod+q exec $lock
bindsym $mod+Shift+r exec --no-startup-id bash ~/dotfiles/scripts/restart-i3.sh

# Lock mode
set $mode_system System (L) lock, (E) logout, (S) suspend, (H) hibernate, (R) reboot, (Shift+S) shutdown
bindsym $mod+Shift+e mode "$mode_system"

mode "$mode_system" {
	bindsym l exec --no-startup-id $Locker, mode "default"
	bindsym e exec --no-startup-id i3-msg exit, mode "default"
	bindsym s exec --no-startup-id $lock && sleep 1 && systemctl suspend, mode "default"
	bindsym h exec --no-startup-id $Locker && systemctl hibernate, mode "default"
	bindsym r exec --no-startup-id systemctl reboot, mode "default"
	bindsym Shift+s exec --no-startup-id systemctl poweroff -i, mode "default"

	bindsym Return mode "default"
	bindsym Escape mode "default"
}

# Scratchpad
# Make the currently focused window a scratchpad
bindsym $mod+Shift+minus move scratchpad

# Show the first scratchpad window
bindsym $mod+minus scratchpad show

# Blink active window
bindsym $mod+Tab exec ~/dotfiles/scripts/flash_win.sh

# Screenshot
bindsym Print exec scrot -e 'mv $f ~/Pictures/'
bindsym Shift+Print exec flameshot gui

# Shortcut applications
bindsym $mod+F1 exec qutebrowser
bindsym $mod+F2 exec $terminal -e pacaur -Syyu --noconfirm --noedit
bindsym $mod+Shift+F2 exec $terminal -e bash -c "cd ~/dotfiles && git pull && sleep 5"
bindsym $mod+F3 exec $terminal -e ranger

# On startup
exec_always --no-startup-id feh --bg-fill ~/dotfiles/wallpaper.png
exec_always --no-startup-id volumeicon
exec_always --no-startup-id nm-applet
exec_always --no-startup-id system-config-printer-applet
exec_always --no-startup-id xdotool mousemove_relative -- -10000 10000
exec_always --no-startup-id caffeine
exec_always --no-startup-id xrdb ~/.Xresources
exec_always --no-startup-id numlockx on
exec_always --no-startup-id udiskie -ANs

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# move focused window
bindsym $mod+Shift+h move left 20px
bindsym $mod+Shift+j move down 20px
bindsym $mod+Shift+k move up 20px
bindsym $mod+Shift+l move right 20px
bindsym $mod+c move position center

# resize focused window
bindsym $mod+Ctrl+h resize shrink width 20 px
bindsym $mod+Ctrl+j resize grow height 20 px
bindsym $mod+Ctrl+k resize shrink height 20 px
bindsym $mod+Ctrl+l resize grow width 20 px

# split in horizontal or vertical orientation
bindsym $mod+g split h
bindsym $mod+v split v

bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent or child container
bindsym $mod+a focus parent
bindsym $mod+z focus child

# switch to workspace
bindsym $mod+1 workspace 1
bindsym $mod+2 workspace 2
bindsym $mod+3 workspace 3
bindsym $mod+4 workspace 4
bindsym $mod+5 workspace 5
bindsym $mod+6 workspace 6
bindsym $mod+7 workspace 7
bindsym $mod+8 workspace 8
bindsym $mod+9 workspace 9
bindsym $mod+0 workspace 10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace 1
bindsym $mod+Shift+2 move container to workspace 2
bindsym $mod+Shift+3 move container to workspace 3
bindsym $mod+Shift+4 move container to workspace 4
bindsym $mod+Shift+5 move container to workspace 5
bindsym $mod+Shift+6 move container to workspace 6
bindsym $mod+Shift+7 move container to workspace 7
bindsym $mod+Shift+8 move container to workspace 8
bindsym $mod+Shift+9 move container to workspace 9
bindsym $mod+Shift+0 move container to workspace 10

# move focused container to workspace and switch to it
bindsym $mod+Shift+Ctrl+1 move container to workspace 1; workspace 1
bindsym $mod+Shift+Ctrl+2 move container to workspace 2; workspace 2
bindsym $mod+Shift+Ctrl+3 move container to workspace 3; workspace 3
bindsym $mod+Shift+Ctrl+4 move container to workspace 4; workspace 4
bindsym $mod+Shift+Ctrl+5 move container to workspace 5; workspace 5
bindsym $mod+Shift+Ctrl+6 move container to workspace 6; workspace 6
bindsym $mod+Shift+Ctrl+7 move container to workspace 7; workspace 7
bindsym $mod+Shift+Ctrl+8 move container to workspace 8; workspace 8
bindsym $mod+Shift+Ctrl+9 move container to workspace 9; workspace 9
bindsym $mod+Shift+Ctrl+0 move container to workspace 10; workspace 10

# reload the configuration file
bindsym $mod+Shift+c reload

set $bg-color 	         #1b9bf8
set $inactive-bg-color   #2d2d2d
set $text-color          #ffffff
set $inactive-text-color #999999
set $urgent-bg-color     #d64937
set $indicator           #dddddd

# window colors
#                       border              background         text                 indicator
client.focused          $bg-color           $bg-color          $text-color          $indicator
client.unfocused        $inactive-bg-color  $inactive-bg-color $inactive-text-color $indicator
client.focused_inactive $inactive-bg-color  $inactive-bg-color $inactive-text-color $indicator
client.urgent           $urgent-bg-color    $urgent-bg-color   $text-color          $indicator

bar {
	status_command i3blocks

	colors{
		background #ffffff
		statusline #000000
		separator #444444

# 											border 		background 		number
		focused_workspace	 	#044f77 	#1badf8 			#000000
		active_workspace 		#444444 	#6c71c4 			#fdf6e3
		inactive_workspace 	#888888 	#ffffff 			#333333
		urgent_workspace 		#970800 	#ff3b30 			#ffffff
	}
}

# Gaps
gaps inner 8
gaps outer 8

bindsym $mod+U gaps inner current minus 4; gaps outer current minus 4
bindsym $mod+I gaps inner current plus 4; gaps outer current plus 4
bindsym $mod+O gaps inner current set 0; gaps outer current set 0
bindsym $mod+P gaps inner current set 8; gaps outer current set 8



# Poor Man's volume control
bindsym $mod+Ctrl+Next exec --no-startup-id amixer -q set Master 2\%- unmute
bindsym $mod+Ctrl+Prior exec --no-startup-id amixer -q set Master 2\%+ unmute
bindsym Scroll_Lock exec --no-startup-id xdotool keyup Scroll_Lock && xdotool key XF86AudioLowerVolume
bindsym Pause exec --no-startup-id xdotool keyup Pause && xdotool key XF86AudioRaiseVolume
#bindsym XF86AudioMute exec --no-startup-id amixer -q set Master toggle

# Poor Man's mouse control
bindsym $mod+Left exec xdotool mousemove_relative -- -15 0
bindsym $mod+Down exec xdotool mousemove_relative 0 15
bindsym $mod+Up exec xdotool mousemove_relative -- 0 -15
bindsym $mod+Right exec xdotool mousemove_relative 15 0

bindsym $mod+Shift+Left exec xdotool mousemove_relative -- -5 0
bindsym $mod+Shift+Down exec xdotool mousemove_relative 0 5
bindsym $mod+Shift+Up exec xdotool mousemove_relative -- 0 -5
bindsym $mod+Shift+Right exec xdotool mousemove_relative 5 0

bindsym $mod+Shift+Return exec xdotool click 1
bindsym $mod+F10 exec xdotool click 1
bindsym $mod+Ctrl+Return exec xdotool click 3
bindsym $mod+Prior exec xdotool click 4
bindsym $mod+Next exec xdotool click 5

bindsym $mod+Ctrl+0 exec --no-startup-id xdotool mousemove_relative -- -10000 10000

# Compton toggle
bindsym $mod+F7 exec --no-startup-id pkill compton
bindsym $mod+F8 exec --no-startup-id compton -b

# Floating window exceptions
for_window [class="Steam" instance="Steam" title="Friends"] floating enable
for_window [class="Steam" instance="Steam" title="Steam Guard - Computer Authorization Required"] floating enable
for_window [class="Firefox" title="About Mozilla Firefox"] floating enable

# i3-gaps fix
# for_window [class="^.*"] border pixel 0
new_window pixel 1


# Music mode
set $music_mode Select a music player: (P)ianobar or (S)potify
bindsym $mod+Shift+m mode "$music_mode"
bindsym $mod+Shift+p mode "$music_mode"

mode "$music_mode" {
	bindsym p exec --no-startup-id echo -n "pianobar" > ~/.musicmode, mode "default"
	bindsym s exec --no-startup-id echo -n "spotify" > ~/.musicmode, mode "default"

	bindsym Return mode "default"
	bindsym Escape mode "default"
}

# Media control bindings
bindsym $mod+M exec "~/dotfiles/scripts/music-control.sh playpause"
bindsym XF86AudioPlay exec "~/dotfiles/scripts/music-control.sh playpause"

bindsym $mod+N exec "~/dotfiles/scripts/music-control.sh next"
bindsym XF86AudioNext exec "~/dotfiles/scripts/music-control.sh next"

bindsym $mod+B exec "~/dotfiles/scripts/music-control.sh back"
bindsym XF86AudioPrev exec "~/dotfiles/scripts/music-control.sh back"

